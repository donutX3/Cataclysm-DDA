{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 2
  },
  "configurePresets": [
    {
      "name": "base",
      "environment": {
        "VCPKG_ROOT": "G:/Software/vcpkg"
      },
      "hidden": true
    },
    {
      "name": "cataclysmdda-x64-dynamic",
      "inherits": [
        "base"
      ],
      "description": "Platformless x64 CDDA",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "VCPKG_MANIFEST_DIR": {
          "type": "PATH",
          "value": "${sourceDir}/msvc-full-features"
        },
        "VCPKG_TARGET_ARCHITECTURE": {
          "type": "STRING",
          "value": "x64"
        },
        "VCPKG_CRT_LINKAGE": {
          "type": "STRING",
          "value": "dynamic"
        },
        "VCPKG_LIBRARY_LINKAGE": {
          "type": "STRING",
          "value": "dynamic"
        },
        "VCPKG_BUILD_TYPE": {
          "type": "STRING",
          "value": "release"
        },
        "VCPKG_MANIFEST_MODE": {
          "type": "BOOL",
          "value": "ON"
        },
        "CURSES": {
          "type": "BOOL",
          "value": "OFF"
        },
        "TILES": {
          "type": "BOOL",
          "value": "ON"
        },
        "SOUND": {
          "type": "BOOL",
          "value": "ON"
        },
        "TESTS": {
          "type": "BOOL",
          "value": "OFF"
        },
        "LOCALIZE": {
          "type": "BOOL",
          "value": "OFF"
        },
        "WARNINGS_AS_ERRORS": {
          "type": "BOOL",
          "value": "OFF"
        }
      },
      "hidden": true
    },
    {
      "name": "cataclysmdda-linux-x64-dynamic",
      "inherits": [
        "cataclysmdda-x64-dynamic"
      ],
      "description": "Linux x64 CDDA",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_HOST_TRIPLET": {
          "type": "STRING",
          "value": "x64-linux"
        }
      }
    },
    {
      "name": "cataclysmdda-windows-x64-dynamic",
      "inherits": [
        "cataclysmdda-x64-dynamic"
      ],
      "description": "Windows x64 CDDA",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_HOST_TRIPLET": {
          "type": "STRING",
          "value": "x64-mingw-dynamic"
        }
      }
    }
  ]
}