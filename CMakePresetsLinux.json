{
    "version": 4,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 26,
      "patch": 3
    },
    "configurePresets": [
      {
        "name": "base",
        "environment": {
          "VCPKG_ROOT": "$env{HOME}/Software/vcpkg"
        },
        "hidden": true
      },
      {
        "name": "cataclysmdda-linux-x64-dynamic",
        "inherits":["base"],
        "description": "Linux x64 version of CDDA",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "cacheVariables": {
          "VCPKG_MANIFEST_DIR": {
            "type": "PATH",
            "value": "${sourceDir}/msvc-full-features"
          },
          "VCPKG_TARGET_ARCHITECTURE": {
            "type": "STRING",
            "value": "x64"
          },
          "VCPKG_CRT_LINKAGE": {
            "type": "STRING",
            "value": "dynamic"
          },
          "VCPKG_LIBRARY_LINKAGE": {
            "type": "STRING",
            "value": "dynamic"
          },
          "VCPKG_BUILD_TYPE": {
            "type": "STRING",
            "value": "release"
          },
          "VCPKG_MANIFEST_MODE": {
            "type": "BOOL",
            "value": "ON"
          },
          "VCPKG_HOST_TRIPLET": {
            "type": "STRING",
            "value": "x64-linux"
          },
          "CURSES": {
            "type": "BOOL",
            "value": "OFF"
          },
          "TILES": {
            "type": "BOOL",
            "value": "ON"
          },
          "SOUND": {
            "type": "BOOL",
            "value": "ON"
          },
          "TESTS": {
            "type": "BOOL",
            "value": "OFF"
          },
          "LOCALIZE": {
            "type": "BOOL",
            "value": "OFF"
          },
          "DYNAMIC_LINKING": {
            "type": "BOOL",
            "value": "ON"
          },
          "WARNINGS_AS_ERRORS": {
            "type": "BOOL",
            "value": "OFF"
          }
        }
      }
    ]
  }
  