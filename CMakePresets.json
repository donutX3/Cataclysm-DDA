{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 2
  },
  "configurePresets": [
    {
      "name": "base",
      "environment": {
        "VCPKG_ROOT": "C:/vcpkg"
      },
      "hidden": true
    },
    {
      "name": "cataclysmdda-x64",
      "inherits": [
        "base"
      ],
      "description": "Platformless x64 CDDA",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_MANIFEST_DIR": "${sourceDir}/msvc-full-features",
        "VCPKG_MANIFEST_MODE": "ON",
        "CURSES": "OFF",
        "TILES": "ON",
        "SOUND": "ON",
        "TESTS": "OFF",
        "LOCALIZE": "OFF",
        "WARNINGS_AS_ERRORS": "OFF"
      },
      "hidden": true
    },
    {
      "name": "cataclysmdda-linux-x64-dynamic",
      "inherits": [
        "cataclysmdda-x64"
      ],
      "description": "Linux x64 CDDA",
      "cacheVariables": {
        "VCPKG_HOST_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "cataclysmdda-windows-x64-dynamic",
      "inherits": [
        "cataclysmdda-x64"
      ],
      "description": "Windows x64 CDDA",
      "cacheVariables": {
        "VCPKG_HOST_TRIPLET": "x64-windows",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "DYNAMIC_LINKING": "ON"
      }
    },
    {
      "name": "cataclysmdda-windows-x64-static",
      "inherits": [
        "cataclysmdda-x64"
      ],
      "description": "Windows x64 CDDA",
      "cacheVariables": {
        "VCPKG_HOST_TRIPLET": "x64-windows",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "DYNAMIC_LINKING": "OFF"
      }
    }
  ]
}